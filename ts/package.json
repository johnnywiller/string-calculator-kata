{
  "name": "string-calculator-kata",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Sergey Kudashev <kudashevs@gmail.com>",
  "description": "../README.md",
  "scripts": {
    "build": "tsc",
    "test": "jest --colors",
    "test:coverage": "jest --colors --coverage",
    "test:watch": "jest --colors --watchAll"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.18",
    "jest": "^29.5.12",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^5.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test)\\.(js|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "standard": {
    "env": [
      "node",
      "jest"
    ],
    "globals": [
      "expect"
    ]
  }
}
